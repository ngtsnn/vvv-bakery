<div class="content">
        <div class="container">
          <div class="gap-xs"></div>
          <div class="c-white row">
            <div class="large-size col-lg-6">
              <div class="ml-3">TÊN LOẠI BÁNH</div>
            </div>
            <div class="col-lg-6">
              <div class="float-right col-lg-2 clear-fix" id="btn-save-product-type">
                <a href="javascript:;" class="d-block btn btn-success mt-1" >
                  Lưu
                </a>
              </div>
            </div>
          </div>
          <div class="gap-xs"></div>
          <div class="container">
            <div class="row">
              <div class="col-md-12 input-field mt-2">
                <form method="POST" action="" class="bg-dark c-white py-2 pb-4 px-3" id="form-product-type">
                  <input name="productTypeID" type="hidden" value="-1" />
                  <div class="form-row">
                    <div class="form-group col-md-12">
                      <label for="product-type">Tên loại bánh</label>
                      <input name="productType" type="text" class="form-control" id="product-type" placeholder="Tên loại bánh">
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="main-type"> Tên loại bánh chính </label>
                      <input type="text" name="mainType" class="form-control" id="main-type" placeholder="Tên loại bánh chính">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="sub-type"> Tên loại bánh phụ </label>
                      <input type="text" name="subType" class="form-control" id="sub-type" placeholder="Tên loại bánh phụ" min="1000" step="1000">
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="gap-sm"></div>
          </div>
        </div>
      </div>