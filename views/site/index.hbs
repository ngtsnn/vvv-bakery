{{/section}}

  <!--body-->

  <div class="hot-deal-section">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active" data-interval="3000">
          <img src="../../images/hot-deals/hinh1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="3000">
          <img src="../../images/hot-deals/hinh2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="3000">
          <img src="../../images/hot-deals/hinh3.png" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="sweet-cake-section">
    <div class="gap-md"></div>
    <div class="container">

      <div class="row">
        <div class="col-md-12 col-lg-6">
          <div class="title">
            {{product_Arr_1_name}}
          </div>
        </div>
        <div class="d-none d-lg-block col-lg-6">
          <div class="sort-by float-right row">
            <label for="sort-by-item-1"> Sắp xếp theo: </label>
            <select name="sort-by-toggle" class="sort-by-item" id="sort-by-item-1" data-target="#post-1">
              <option value="unit-price"> Đơn giá </option>
              <option value="product-name"> Tên bánh </option>
            </select>
          </div>
        </div>
      </div>

      <div class="gap-xs"></div>

      <div class="row collapse-post" id="post-1" set-quantity-show-collapse='4'>
        {{#each product_Arr_1}}
        <div class="col-sm-12 col-md-5 col-lg-4 col-xl-3 my-3">
          <div class="card bg-w">
            <div class="card-header">
              <img src="../../images/{{origin}}" alt="gido" />
            </div>
            <div class="card-body">
              <h3 class="product-name">
                {{productName}}
              </h3>
              <div class="unit-price">
                {{unitPrice}}
              </div>
            </div>

            <div class="card-footer bg-w">
              <div class="icons">
                <a href="#" class="fa-3x mx-1" title="mua ngay với 1-click">
                  <i class="fas fa-hand-point-up"></i>
                </a>

                <a href="product/{{productID}}" class="fa-3x mx-1" title="xem trước">
                  <i class="far fa-eye"></i>
                </a>

                <a class="fa-3x mx-1" title="thêm vào giỏ hàng">
                  <i class="fas fa-cart-plus" onclick="add_one_to_cart({{productID}}); this.style.color = 'rgba(235, 128, 29, 1)'"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <div class="see-more-contain-full">
        <a class="see-more-btn" data-target="#post-1">
          <div class="see-more-text">
            Xem thêm bài viết
            <i class="fas fa-angle-down"></i>
          </div>
          <div class="see-more-text d-none">
            Thu gọn   
            <i class="ml-1 fas fa-angle-up"></i>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="sweet-cake-section">
    <div class="gap-md"></div>
    <div class="container">

      <div class="row">
        <div class="col-md-12 col-lg-6">
          <div class="title">
            {{product_Arr_2_name}}
          </div>
        </div>
        <div class="d-none d-lg-block col-lg-6">
          <div class="sort-by float-right row">
            <label for="sort-by-item-1"> Sắp xếp theo: </label>
            <select name="sort-by-toggle" class="sort-by-item" id="sort-by-item-1" data-target="#post-2">
              <option value="unit-price"> Đơn giá </option>
              <option value="product-name"> Tên bánh </option>
            </select>
          </div>
        </div>
      </div>

      <div class="gap-xs"></div>

      <div class="row collapse-post" id="post-2" set-quantity-show-collapse='4'>
        {{#each product_Arr_2}}
        <div class="col-sm-12 col-md-5 col-lg-4 col-xl-3 my-3">
          <div class="card bg-w">
            <div class="card-header">
              <img src="../../images/{{origin}}" alt="gido" />
            </div>
            <div class="card-body">
              <h3 class="product-name">
                {{productName}}
              </h3>
              <div class="unit-price">
                {{unitPrice}}
              </div>
            </div>

            <div class="card-footer bg-w">
              <div class="icons">
                <a href="#" class="fa-3x mx-1" title="mua ngay với 1-click">
                  <i class="fas fa-hand-point-up"></i>
                </a>

                <a href="product/{{productID}}" class="fa-3x mx-1" title="xem trước">
                  <i class="far fa-eye"></i>
                </a>

                <a class="fa-3x mx-1" title="thêm vào giỏ hàng">
                  <i class="fas fa-cart-plus" onclick="this.style.color = 'rgba(235, 128, 29, 1)'"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <div class="see-more-contain-full">
        <a class="see-more-btn" data-target="#post-2">
          <div class="see-more-text">
            Xem thêm bài viết
            <i class="fas fa-angle-down"></i>
          </div>
          <div class="see-more-text d-none">
            Thu gọn   
            <i class="ml-1 fas fa-angle-up"></i>
          </div>
        </a>
      </div>
    </div>
  </div>

