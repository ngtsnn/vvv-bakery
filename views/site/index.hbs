  <script>
    function add_one_to_cart(id){
    $.post('/cart', {
        productID: id,
        quantity: 1
    }, function (ketqua) {
        if (ketqua) {
        console.log(ketqua);
        // location.reload(urlCurrent);
        updateCartNumber();
        } else {
        alert('Invalid data.');
        }
    });
    }
